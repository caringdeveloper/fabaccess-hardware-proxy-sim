{
  "swagger": {
    "outputDirectory": "./definitions",
    "entryFile": "./src/main.ts",
    "basePath": "/v1",
    "yaml": false,
    "securityDefinitions": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "noImplicitAdditionalProperties": "throw-on-extras",
    "specVersion": 3,
    "host": "localhost:4000",
    "schemes": ["http"]
  },
  "routes": {
    "basePath": "/v1",
    "entryFile": "./src/main.ts",
    "routesDir": "./src",
    "iocModule": "./src/Modules/ioc-container.ts",
    "authenticationModule": "./src/Modules/authentication.ts"
  }
}
